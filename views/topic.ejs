<%- include('partials/header'); -%>

<h1><%= %></h1>

<form class="formmargin" method="post" action="<%=parameter%>>">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<% for (let x in posts) { %>
    <h2><%= posts[x].title %></h2>
    
    <p><%= posts[x].body %>
    <a href="/<%=topic%>/posts/<%= posts[x].title %>">Read More</a></p>
    <small>Views: <%= posts[x].views %> Comments: <%= posts[x].commentNumber %> </small>
<% } %>

<%- include('partials/footer'); -%>