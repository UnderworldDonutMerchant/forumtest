<% for (let x in comment) { %>
    <div class="card">
        <div class="card-header">
          Posted by <%=comment[x].user%>
        </div>
        <div class="card-body">
          <p class="card-text"><%=comment[x].body%></p>
          <p>Time: <%=comment[x].time%></p>
          <button class="btn btn-primary reply" type="submit" name="button" > Reply </button>
        </div>
    </div>
<% } %>




